<body>
    <div class="calc">
        <input type="text" id="res" readonly placeholder="0">
        <div class="btns">
            <button onclick="f('')" style="background:#a5a5a5; color:black">C</button>
            <button onclick="f('/')" class="op">÷</button>
            <button onclick="f('*')" class="op">×</button>
            <button onclick="f('-')" class="op">−</button>
            <button onclick="f('7')">7</button><button onclick="f('8')">8</button><button onclick="f('9')">9</button>
            <button onclick="f('+')" class="op">+</button>
            <button onclick="f('4')">4</button><button onclick="f('5')">5</button><button onclick="f('6')">6</button>
            <button onclick="e()" class="eq">=</button>
            <button onclick="f('1')">1</button><button onclick="f('2')">2</button><button onclick="f('3')">3</button>
            <button onclick="f('0')" style="grid-column: span 2; border-radius: 35px;">0</button>
            <button onclick="f('.')">.</button>
        </div>
    </div>
    <script>
        let r = document.getElementById('res');
        function f(v) { v=='' ? r.value='' : r.value+=v; }
        function e() { try { r.value = eval(r.value); } catch { r.value = 'Error'; } }
    </script>
</body>
