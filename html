    <title>My Cloud Calculator</title>
    <style>
        body { display: flex; justify-content: center; align-items: center; height: 100vh; background: #121212; font-family: sans-serif; }
        .calc { background: #1e1e1e; padding: 20px; border-radius: 20px; box-shadow: 0 20px 50px rgba(0,0,0,0.5); }
        #res { width: 100%; height: 60px; font-size: 32px; text-align: right; margin-bottom: 20px; background: none; border: none; color: white; outline: none; }
        .btns { display: grid; grid-template-columns: repeat(4, 70px); gap: 10px; }
        button { height: 70px; border-radius: 35px; border: none; font-size: 24px; cursor: pointer; background: #333; color: white; transition: 0.3s; }
        button:hover { background: #444; }
        .op { background: #ff9f0a; }
        .op:hover { background: #ffb340; }
        .eq { background: #34c759; grid-column: span 2; }
    </style>
